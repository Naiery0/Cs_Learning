<Page x:Class="Cs_Toy_remindC.Views.GameView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cs_Toy_remindC.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="450"
      Title="GameView"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/> <!-- 여백 -->
            <RowDefinition Height="1.5*"/> <!-- 좌: 하트, 우: 중지 버튼 -->
            <RowDefinition Height="4.5*"/> <!-- 피아노 타일 -->
            <RowDefinition Height="1.5*"/> <!-- 시작 버튼, 코멘트 -->
            <RowDefinition Height="1.5*"/> <!-- 뒤로 가기 -->
            <RowDefinition Height="1*"/> <!--여백-->
        </Grid.RowDefinitions>
        <!-- 2번째 Row(인덱스 1)에만 Column을 추가하려면 중첩 Grid 사용 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" 
                        Margin="12,0">
                <TextBlock Text="❤ " FontSize="24" 
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding heart}" FontSize="20" 
                           VerticalAlignment="Center"/>
            </StackPanel>

            <Button Grid.Column="1" Content="{Binding pauseTxt}" 
                    Width="80" Height="36" 
                    HorizontalAlignment="Right" VerticalAlignment="Center" 
                    Margin="0,0,12,0"/>
            
            
        </Grid>
        
        <!-- 피아노 타일 영역 ...AI가 이런 거 그릴 땐 증말 좋네~ -->
        <Grid Grid.Row="2" Margin="12,8" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Border Background="#222" CornerRadius="10" Margin="12">
                <Grid>
                    <!-- 흰 건반 영역 -->
                    <UniformGrid Rows="1" Columns="7" Background="Black" Name="WhiteKeysGrid" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0">
                        <Button Background="White" Name="Do" Content="도" BorderThickness="1" FontSize="18"/>
                        <Button Background="White" Name="Re" Content="레" BorderThickness="1" FontSize="18"/>
                        <Button Background="White" Name="Mi" Content="미" BorderThickness="1" FontSize="18"/>
                        <Button Background="White" Name="Fa" Content="파" BorderThickness="1" FontSize="18"/>
                        <Button Background="White" Name="Sol" Content="솔" BorderThickness="1" FontSize="18"/>
                        <Button Background="White" Name="La" Content="라" BorderThickness="1" FontSize="18"/>
                        <Button Background="White" Name="Si" Content="시" BorderThickness="1" FontSize="18"/>
                    </UniformGrid>

                    <!-- 검은 건반: Canvas 위에 오버레이 -->
                    <Canvas IsHitTestVisible="True">
                        <!-- 좌표는 UniformGrid의 실제 크기에 따라 미세 조정 필요 -->
                        <Button Width="40" Height="120" Background="Black" Foreground="White" Content="도#" Canvas.Left="40"  Canvas.Top="6" Name="DoSharp" Panel.ZIndex="2"/>
                        <Button Width="40" Height="120" Background="Black" Foreground="White" Content="레#" Canvas.Left="100" Canvas.Top="6" Name="ReSharp" Panel.ZIndex="2"/>
                        <!-- 미-파 사이에는 검은 건반이 없음 -> 빈 간격 -->
                        <Button Width="40" Height="120" Background="Black" Foreground="White" Content="파#" Canvas.Left="220" Canvas.Top="6" Name="FaSharp" Panel.ZIndex="2"/>
                        <Button Width="40" Height="120" Background="Black" Foreground="White" Content="솔#" Canvas.Left="280" Canvas.Top="6" Name="SolSharp" Panel.ZIndex="2"/>
                        <Button Width="40" Height="120" Background="Black" Foreground="White" Content="라#" Canvas.Left="340" Canvas.Top="6" Name="LaSharp" Panel.ZIndex="2"/>
                    </Canvas>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>

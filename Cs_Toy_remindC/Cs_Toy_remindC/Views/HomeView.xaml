<Page x:Class="Cs_Toy_remindC.Views.HomeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cs_Toy_remindC.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="450"
      Title="HomeView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Content="음감 테스트" Margin="50 10 50 10"
                Command="{Binding ShowGameCommand}"/>
        <Button Grid.Row="2" Content="음감 랭킹" Margin="50 10 50 10"/>
        <Button Grid.Row="3" Content="연주하기" Margin="50 10 50 10"/>
        <Button Grid.Row="4" Content="음원 만들기" Margin="50 10 50 10"/>
        <Button Grid.Row="5" Content="음원 재생하기" Margin="50 10 50 10"/>
    </Grid>
</Page>
